#!/usr/bin/env node

var metageo = require('../'),
    path    = require('path'),
    fs      = require('fs'),
    _       = require('lodash'),
    path;

process.once('SIGQUIT', metageo.stop);
//restart
process.on('SIGUSR2', metageo.stop);

path = process.argv[2];

if(path){
   path = path[0] !== '/' ? process.cwd() + '/' + path : path;
}else{
   path = path.resolve(__dirname, '../config/default');
}

var config = require(path);

metageo.start(config);

